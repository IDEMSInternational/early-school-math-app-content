{
  "flow_type": "template",
  "flow_name": "efm_ga_template",
  "status": "released",
  "rows": [
    {
      "name": "efm_ga",
      "value": "@@fields.current_ga"
    },
    {
      "name": "ga_name",
      "value": "@local.efm_ga.name"
    },
    {
      "name": "ga_id",
      "value": "@local.efm_ga.id"
    },
    {
      "name": "local_false",
      "value": false
    },
    {
      "name": "next_ga",
      "value": "@local.local_false"
    },
    {
      "name": "prev_ga",
      "value": "@local.local_false"
    },
    {
      "name": "has_ga_been_seen",
      "value": "@local.local_false"
    },
    {
      "name": "do_ids_match",
      "value": "@local.local_false"
    },
    {
      "type": "begin_items",
      "name": "find_next_and_prev",
      "value": "@data.efm_gas",
      "comments": "Cycle through all gas to find the previous and next activities of an ok_type"
    },
    {
      "name": "do_ids_match",
      "value": "@item.id == @local.ga_id",
      "exclude_from_translation": true
    },
    {
      "name": "has_ga_been_seen",
      "value": "@local.has_ga_been_seen || @local.do_ids_match",
      "exclude_from_translation": true
    },
    {
      "name": "prev_ga",
      "value": "data.efm_gas.@item.id",
      "condition": "!@local.do_ids_match && !@local.has_ga_been_seen",
      "comments": "The previous ga keeps being updated with gas until we have matching titles.",
      "exclude_from_translation": true
    },
    {
      "name": "next_ga",
      "value": "data.efm_gas.@item.id",
      "condition": "!@local.do_ids_match && @local.has_ga_been_seen && !@local.next_ga",
      "comments": "The next_ga should be the very first ga after we have matching titles.",
      "exclude_from_translation": true
    },
    {
      "type": "end_items"
    },
    {
      "type": "begin_display_group",
      "style_list": "margin-top: -8px;"
    },
    {
      "type": "button",
      "name": "prev_button_1",
      "value": "<",
      "action_list": "click | set_field:current_ga:@local.prev_ga;\nclick | emit:force_reload",
      "condition": "@local.prev_ga",
      "parameter_list": "style: short;\ntext_align: center",
      "style_list": "flex: 30",
      "exclude_from_translation": true
    },
    {
      "type": "text",
      "name": "left_spacer",
      "condition": "!@local.prev_ga",
      "style_list": "flex: 30"
    },
    {
      "type": "text",
      "name": "title",
      "value": "@local.ga_name",
      "parameter_list": "text_align: center;\nstyle: large emphasised",
      "style_list": "flex: 300"
    },
    {
      "type": "button",
      "name": "next_button_1",
      "value": "\\>",
      "action_list": "click | set_field:current_ga:@local.next_ga;\nclick | emit:force_reload",
      "condition": "@local.next_ga",
      "parameter_list": "style: short;\ntext_align: center",
      "style_list": "flex: 30",
      "exclude_from_translation": true
    },
    {
      "type": "text",
      "name": "right_spacer",
      "condition": "!@local.next_ga",
      "style_list": "flex: 30"
    },
    {
      "type": "end_display_group"
    },
    {
      "type": "text",
      "name": "ga_concepts",
      "value": "Concepts: @local.efm_ga.concepts"
    },
    {
      "type": "text",
      "name": "ga_uses",
      "value": "Uses: @local.efm_ga.uses",
      "style_list": "margin-top: -14px;"
    },
    {
      "type": "text",
      "name": "ga_materials",
      "value": "Materials: @local.efm_ga.materials",
      "style_list": "margin-top: -14px;"
    },
    {
      "type": "text",
      "name": "ga_players",
      "value": "Players: @local.efm_ga.players",
      "style_list": "margin-top: -14px;"
    },
    {
      "type": "begin_template",
      "name": "ga_body_generator",
      "value": "efm_ga_body_template"
    },
    {
      "name": "efm_ga_ptr",
      "value": "@local.efm_ga"
    },
    {
      "type": "end_template"
    }
  ]
}