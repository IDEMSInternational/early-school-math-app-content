    {
      "type": "begin_accordion_section",
      "name": "accord_advice",
      "value": "Teaching Ideas & Directions",
      "parameter_list": "text_align: center; \nstyle: large emphasised",
      "comments": true
    },
    {
      "type": "begin_display_group",
      "name": "dg_advice_accord",
      "parameter_list": "style: column"
    },
    {
      "type": "text",
      "name": "advice_text",
      "value": "Present four to six mental math problems that are increasingly difficult. Mix them up and show them all at the same time so it is not obvious which problems will be hardest. After a minute of quiet inspection, students discuss and rank these from easiest to hardest. Next, students solve the problems and compare their methods and answers.\n\nKnowing which problems your students have trouble with points the way to skills to work on or introduce in the near future.",
      "parameter_list": "icon_src: help; style:navigation"
    },
    {
      "type": "end_display_group"
    },
    {
      "type": "end_accordion_section",
      "comments": true
